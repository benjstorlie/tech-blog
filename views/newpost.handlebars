<div class="col-12">
  <div class="card">
    <div class="card-body">
    <form id="new-post-form">
      <div class="form-group">
        <label for="blogpost-title">Title:</label>
        <input type="text" class="form-control" id="blogpost-title" value= 
        "" placeholder="Post Title"></input>
       <div class="invalid-feedback">
          Title must not be blank
        </div>
      </div>
      <div class="form-group">
        <label for="blogpost-body">Body</label>
        <textarea class="form-control" id="blogpost-body" rows="5" placeholder="Write your content here."></textarea>
       <div class="invalid-feedback">
          Post body must not be blank.
        </div>
      </div>
      <div class="form-group">
         <label for="select-tags">Choose multiple tags (Feature not currently available!!  Will not save!!)</label>
        <select class="form-select" id="select-tags" aria-label="select multiple tags" size="5" multiple>
          <option selected></option>
          {{#each tags as |tag|}}
            <option value="{{tag.id}}">{{tag.tagName}}</option>
          {{/each}}
          </select>
      </div>
      <button type="submit" id="submit-post" class="btn">Submit</button>
      <div id="post-status" class="btn d-none">posting....</div>
    </form>
    </div>
  </div>
</div>

    <script src="/js/newpost.js"></script>