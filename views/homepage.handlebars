
<nav aria-label="blogpost page navigation" class="col-12">
  <ul class="pagination justify-content-end">
    {{pagination blogpostCount page}}
  </ul>
</nav>
<!-- Loop over each object in the blogposts array -->

<div class="col-12 col-md-9">
{{#each blogposts as |blogpost| }}
<div class="blogpost card m-3 text-light bg-dark border border-white border-2">
  <div class="card-header bg-secondary border-bottom border-white border-1">
    {{blogpost_link blogpost}}
    {{user_link blogpost.user}}
    {{#each blogpost.tags as |tag|}}{{tag_link tag}}{{/each}}
  </div>
  <div class="card-body">
    {{blogpost.body}}
  </div>
  <div class="card-footer bg-secondary">
    {{blogpost_comment_link blogpost}}
  </div>
</div>
{{/each}}
</div>