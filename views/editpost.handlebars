<div class="col-12">
  <div class="card">
    <div class="card-body">
    <form id="edit-post-form" data-blogpostId="{{blogpost.id}}">
      <div class="form-group">
        <label for="blogpost-title">Title:</label>
        <input type="text" class="form-control" id="blogpost-title" value="{{blogpost.title}}"></input>
       <div class="invalid-feedback">
          Title must not be blank
        </div>
      </div>
      <div class="form-group">
        <label for="blogpost-body">Body</label>
        <textarea class="form-control" id="blogpost-body" rows="5">{{blogpost.body}}</textarea>
       <div class="invalid-feedback">
          Post body must not be blank.
        </div>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="update-tags">
        <label class="form-check-label" for="update-tags">
          Update tags
        </label>
      </div>
      <div class="form-group">
        <label for="select-tags">Choose multiple tags (Feature not currently available!! Will not save!!)</label>
        <select class="form-select" id="select-tags" size="3" multiple disabled>
          <option selected></option>
          {{#each tags as |tag|}}
            <option value="{{tag.id}}">{{tag.tagName}}</option>
          {{/each}}
          </select>
      </div>
      <button type="submit" id="submit-post" class="btn">Update</button>
      <div id="post-status" class="btn d-none">posting....</div>
    </form>
    </div>
  </div>
</div>

    <script src="/js/editpost.js"></script>